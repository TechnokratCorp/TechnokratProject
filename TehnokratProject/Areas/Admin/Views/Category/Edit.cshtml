@model TehnokratProject.Models.Category

<h2> Редагування даних категорії </h2>

<form asp-action="EditPost" asp-controller="Category">
    <p>
        <label asp-for="id">Id</label><br />
        <input type="text" asp-for="id" required />
    </p>
    <p>
        <label asp-for="title">Назва</label><br />
        <input type="text" asp-for="title" required />
    </p>
    <p>
        <label asp-for="description">Опис</label><br />
        <input type="text" asp-for="description" required />
    </p>
    <p>
        <input type="submit" value="Зберегти" class="btn-add"/>
    </p>
</form>

<form asp-action="index" asp-controller="category">
    <input type="submit" value="Назад" />
</form>